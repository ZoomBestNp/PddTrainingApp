<Window x:Class="PddTrainingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PddTrainingApp.Views"
        Title="Подготовка к ПДД" Height="700" Width="1000"
         Icon="/Resources/traffic.png"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header с профилем пользователя - изначально скрыт -->
        <views:UserHeader x:Name="MainHeader" Grid.Row="0" Visibility="Collapsed"/>

        <!-- Основной контент -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"
               Navigated="MainFrame_Navigated"/>
    </Grid>
</Window>