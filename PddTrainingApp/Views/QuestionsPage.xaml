<Page x:Class="PddTrainingApp.Views.QuestionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вопросы ПДД">
    <Grid Background="#f5f5f5">
        <StackPanel>
            <TextBlock Text="Вопросы ПДД" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,20,0,20" Foreground="#333"/>

            <Border x:Name="QuestionCard" Background="White" Margin="20,0,20,20" 
                    Padding="30" CornerRadius="15" BorderThickness="1" BorderBrush="#ddd"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Width="500">
                <StackPanel>
                    <TextBlock x:Name="QuestionText" FontSize="18" FontWeight="SemiBold" 
                               TextWrapping="Wrap" Margin="0,0,0,20" TextAlignment="Center"/>

                    <StackPanel x:Name="OptionsPanel" Margin="0,0,0,20"/>

                    <Button x:Name="CheckAnswerButton" Content="ПРОВЕРИТЬ ОТВЕТ" 
                            Click="CheckAnswerButton_Click"
                            Background="#007ACC" Foreground="White" FontWeight="Bold"
                            Padding="20,12" FontSize="14"
                            HorizontalAlignment="Center" BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Border>

            <TextBlock x:Name="ProgressText" HorizontalAlignment="Center" 
                       FontSize="14" Foreground="#666"/>
        </StackPanel>
    </Grid>
</Page>