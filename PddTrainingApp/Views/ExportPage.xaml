<Page x:Class="PddTrainingApp.Views.ExportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Экспорт вопросов">

    <Grid Background="#f5f5f5">
        <ScrollViewer>
            <StackPanel Margin="20">
                <Button Content="← Назад" Click="BackButton_Click"
                        Background="Transparent" Foreground="#007ACC" 
                        Padding="10,5" FontSize="14" HorizontalAlignment="Left"
                        BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>

                <TextBlock Text="Экспорт вопросов" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,20" Foreground="#333"/>

                <Border Background="White" Padding="20" CornerRadius="10" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Экспорт отдельного вопроса:" 
                                   FontWeight="Bold" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBox x:Name="QuestionIdTextBox" Width="100" 
                                     Padding="10" Margin="0,0,10,0"
                                     Text="1"/>
                            <Button Content="Экспорт вопроса" Click="ExportQuestion_Click"
                                    Background="#3498db" Foreground="White" 
                                    Padding="15,10" FontWeight="Bold" Cursor="Hand"/>
                        </StackPanel>

                        <TextBlock x:Name="ExportResultText" TextWrapping="Wrap"
                                   Foreground="Green" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="White" Padding="20" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="Экспорт вопросов по модулю:" 
                                   FontWeight="Bold" Margin="0,0,0,10"/>

                        <ComboBox x:Name="ModuleComboBox" Padding="10" Margin="0,0,0,15"
                                  DisplayMemberPath="Name" FontSize="14"/>

                        <Button Content="Экспортировать модуль" Click="ExportModule_Click"
                                Background="#27ae60" Foreground="White" 
                                Padding="15,10" FontWeight="Bold" Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>