<Page x:Class="PddTrainingApp.Views.AdminEditQuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование вопроса">
    <Grid Background="#f5f5f5">
        <ScrollViewer>
            <StackPanel Margin="20" Width="600">
                <Button Content="← Назад" Click="BackButton_Click"
                        Background="Transparent" Foreground="#007ACC" 
                        Padding="10,5" FontSize="14" HorizontalAlignment="Left"
                        BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>

                <TextBlock Text="Редактирование вопроса" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,20" Foreground="#333"/>

                <Border Background="White" Padding="20" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="Модуль:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ModuleComboBox" Padding="10" FontSize="14" 
                                  DisplayMemberPath="Name" Margin="0,0,0,15"/>

                        <TextBlock Text="Текст вопроса:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="QuestionText" Padding="10" FontSize="14" 
                                 Background="#f8f9fa" Height="60" TextWrapping="Wrap"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="Варианты ответов:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="Option1TextBox" Padding="10" FontSize="14" 
                                 Background="#f8f9fa" Margin="0,0,0,5" Tag="1"/>
                        <TextBox x:Name="Option2TextBox" Padding="10" FontSize="14" 
                                 Background="#f8f9fa" Margin="0,0,0,5" Tag="2"/>
                        <TextBox x:Name="Option3TextBox" Padding="10" FontSize="14" 
                                 Background="#f8f9fa" Margin="0,0,0,5" Tag="3"/>
                        <TextBox x:Name="Option4TextBox" Padding="10" FontSize="14" 
                                 Background="#f8f9fa" Margin="0,0,0,15" Tag="4"/>

                        <TextBlock Text="Правильный ответ:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="CorrectAnswerComboBox" Padding="10" FontSize="14" 
                                  Margin="0,0,0,20">
                            <ComboBoxItem Content="Вариант 1" Tag="0"/>
                            <ComboBoxItem Content="Вариант 2" Tag="1"/>
                            <ComboBoxItem Content="Вариант 3" Tag="2"/>
                            <ComboBoxItem Content="Вариант 4" Tag="3"/>
                        </ComboBox>

                        <TextBlock Text="Уровень сложности:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="DifficultyComboBox" Padding="10" FontSize="14" 
                                  Margin="0,0,0,20">
                            <ComboBoxItem Content="Легкий" Tag="1"/>
                            <ComboBoxItem Content="Средний" Tag="2"/>
                            <ComboBoxItem Content="Сложный" Tag="3"/>
                        </ComboBox>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Сохранить изменения" Click="SaveQuestionButton_Click"
                                    Background="#27ae60" Foreground="White" 
                                    Padding="20,12" FontSize="14" FontWeight="Bold"
                                    Margin="0,0,10,0" Cursor="Hand"/>

                            <Button Content="Удалить вопрос" Click="DeleteQuestionButton_Click"
                                    Background="#e74c3c" Foreground="White" 
                                    Padding="20,12" FontSize="14" FontWeight="Bold"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>