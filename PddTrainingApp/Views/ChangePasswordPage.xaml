<Page x:Class="PddTrainingApp.Views.ChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Смена пароля">
    <Grid Background="#f5f5f5">
        <Border Background="White" Padding="40" CornerRadius="15" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                BorderBrush="#ddd" BorderThickness="1">
            <StackPanel Width="350">
                <TextBlock Text="Смена пароля" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="Текущий пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="CurrentPasswordBox" Padding="10" FontSize="14" 
                             Background="#f8f9fa" Margin="0,0,0,15"/>

                <TextBlock Text="Новый пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="NewPasswordBox" Padding="10" FontSize="14" 
                             Background="#f8f9fa" Margin="0,0,0,15"/>

                <TextBlock Text="Повторите новый пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Padding="10" FontSize="14" 
                             Background="#f8f9fa" Margin="0,0,0,20"/>

                <Button Content="СМЕНИТЬ ПАРОЛЬ" Click="ChangePasswordButton_Click"
                        Background="#27ae60" Foreground="White" 
                        Padding="20,12" FontSize="14" FontWeight="Bold"
                        Margin="0,0,0,10" BorderThickness="0" Cursor="Hand"/>

                <Button Content="← Назад" Click="BackButton_Click"
                        Background="Transparent" Foreground="#007ACC" 
                        Padding="10,5" FontSize="14" BorderThickness="0"
                        Cursor="Hand" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>