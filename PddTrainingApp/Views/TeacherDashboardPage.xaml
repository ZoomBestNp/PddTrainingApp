<Page x:Class="PddTrainingApp.Views.TeacherDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Панель преподавателя">
    <Grid Background="#f5f5f5">
        <ScrollViewer>
            <StackPanel Margin="20">
                <TextBlock Text="Панель преподавателя" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="#333" Margin="0,0,0,20"/>

                <!-- Реальная статистика -->
                <Border Background="White" Padding="20" CornerRadius="10" Margin="0,0,0,20" Width="575">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Мои студенты" FontSize="12" Foreground="Gray"/>
                            <TextBlock x:Name="StudentsCountText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#3498db"/>
                        </StackPanel>



                    </Grid>
                </Border>

                <!-- Быстрые действия -->
                <TextBlock Text="Управление обучением" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <WrapPanel Margin="0,0,0,20">


                    <Button Content="🔗 Привязка студентов" Click="LinkStudents_Click"
                            Background="#16a085" Foreground="White" 
                            Padding="20,15" FontSize="14" FontWeight="Bold"
                            Margin="0,0,10,10" Cursor="Hand"/>

                    <Button Content="👥 Мои студенты" Click="ManageStudents_Click"
                            Background="#9b59b6" Foreground="White" 
                            Padding="20,15" FontSize="14" FontWeight="Bold"
                            Margin="0,0,10,10" Cursor="Hand"/>

                    <Button Content="📊 Просмотр статистики" Click="ViewStatistics_Click"
                            Background="#e74c3c" Foreground="White" 
                            Padding="20,15" FontSize="14" FontWeight="Bold"
                            Margin="0,0,10,10" Cursor="Hand"/>
                </WrapPanel>

                <!-- Активные задания -->
                <TextBlock Text="Активные задания" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <Border Background="White" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <ItemsControl x:Name="ActiveAssignmentsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f8f9fa" Margin="0,0,0,5" Padding="10" CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock Text="{Binding CompletedCount}" Foreground="Green"/>
                                                <TextBlock Text="/"/>
                                                <TextBlock Text="{Binding TotalStudents}"/>
                                                <TextBlock Text=" студентов" Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoActiveAssignmentsText" Text="Нет активных заданий" 
                                   HorizontalAlignment="Center" FontStyle="Italic" 
                                   Foreground="Gray" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>