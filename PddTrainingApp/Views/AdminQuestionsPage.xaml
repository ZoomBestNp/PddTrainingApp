<Page x:Class="PddTrainingApp.Views.AdminQuestionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление вопросами">
    <Grid Background="#f5f5f5">
        <ScrollViewer>
            <StackPanel Margin="20">
                <Button Content="← Назад" Click="BackButton_Click"
                        Background="Transparent" Foreground="#007ACC" 
                        Padding="10,5" FontSize="14" HorizontalAlignment="Left"
                        BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>

                <TextBlock Text="Управление вопросами" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,20" Foreground="#333"/>

                <!-- Кнопка добавления -->
                <Button Content="➕ Добавить вопрос" Click="AddQuestion_Click"
        Background="#27ae60" Foreground="White" 
        Padding="15,10" FontSize="14" FontWeight="Bold"
        HorizontalAlignment="Left" Margin="0,0,0,15" Cursor="Hand"/>

                <!-- Список вопросов -->
                <Border Background="White" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="Все вопросы:" FontWeight="Bold" Margin="0,0,0,10"/>

                        <ItemsControl x:Name="QuestionsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f8f9fa" Margin="0,0,0,10" Padding="15" CornerRadius="5">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Content}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Module.Name}" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                                                    <TextBlock Text="Варианты ответов:" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                                                    <ItemsControl ItemsSource="{Binding OptionsList}" Margin="10,0,0,0">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" FontSize="11" Margin="0,1"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    <TextBlock Text="{Binding CorrectAnswerText}" FontSize="12" Foreground="Green" 
                                                               FontWeight="Bold" Margin="0,5,0,0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Content="✏️" Click="EditQuestion_Click" 
                                                            Tag="{Binding QuestionId}"
                                                            Background="#f39c12" Foreground="White" 
                                                            Padding="8,5" Margin="0,0,5,0" Cursor="Hand"
                                                            ToolTip="Редактировать вопрос"/>
                                                    <Button Content="🗑️" Click="DeleteQuestion_Click"
                                                            Tag="{Binding QuestionId}"
                                                            Background="#e74c3c" Foreground="White" 
                                                            Padding="8,5" Cursor="Hand"
                                                            ToolTip="Удалить вопрос"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoQuestionsText" Text="Вопросы не найдены" 
                                   HorizontalAlignment="Center" FontStyle="Italic" 
                                   Foreground="Gray" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>