<Page x:Class="PddTrainingApp.Views.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Панель администратора">
    <Grid Background="#f5f5f5">
        <ScrollViewer>
            <StackPanel Margin="20">
                <TextBlock Text="Панель администратора" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="#333" Margin="0,0,0,20"/>

                <!-- Статистика системы -->
                <Border Background="White" Padding="20" CornerRadius="10" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Всего пользователей" FontSize="12" Foreground="Gray"/>
                            <TextBlock x:Name="UsersCountText" Text="0" FontSize="20" FontWeight="Bold" Foreground="#3498db"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Вопросов в базе" FontSize="12" Foreground="Gray"/>
                            <TextBlock x:Name="QuestionsCountText" Text="0" FontSize="20" FontWeight="Bold" Foreground="#27ae60"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Модулей обучения" FontSize="12" Foreground="Gray"/>
                            <TextBlock x:Name="ModulesCountText" Text="0" FontSize="20" FontWeight="Bold" Foreground="#e74c3c"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Управление системой -->
                <TextBlock Text="Управление системой" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <WrapPanel Margin="0,0,0,20">
                    <Button Content="👥 Управление пользователями" Click="ManageUsers_Click"
                            Background="#3498db" Foreground="White" 
                            Padding="20,15" FontSize="14" FontWeight="Bold"
                            Margin="0,0,10,10" Cursor="Hand"/>

                    <Button Content="❓ Управление вопросами" Click="ManageQuestions_Click"
                            Background="#9b59b6" Foreground="White" 
                            Padding="20,15" FontSize="14" FontWeight="Bold"
                            Margin="0,0,10,10" Cursor="Hand"/>

                </WrapPanel>

                <!-- Последние действия -->
                <TextBlock Text="Последние действия в системе" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <Border Background="White" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <ItemsControl x:Name="RecentActivityItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="0,2" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoActivityText" Text="Нет последних действий" 
                                   HorizontalAlignment="Center" FontStyle="Italic" 
                                   Foreground="Gray" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>