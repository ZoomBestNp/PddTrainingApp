<Page x:Class="PddTrainingApp.Views.AdminUsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:PddTrainingApp.Views"
      Title="Управление пользователями">
    <Grid Background="#f5f5f5">
        <ScrollViewer>
            <StackPanel Margin="20">
                <Button Content="← Назад" Click="BackButton_Click"
                        Background="Transparent" Foreground="#007ACC" 
                        Padding="10,5" FontSize="14" HorizontalAlignment="Left"
                        BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>

                <TextBlock Text="Управление пользователями" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,20" Foreground="#333"/>

                <!-- Статистика -->
                <Border Background="White" Padding="15" CornerRadius="10" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Всего пользователей:" FontWeight="Bold" Margin="0,0,10,0"/>
                        <TextBlock x:Name="TotalUsersText" FontWeight="Bold" Foreground="#3498db"/>
                        <TextBlock Text=" | Студентов:" FontWeight="Bold" Margin="20,0,10,0"/>
                        <TextBlock x:Name="StudentsCountText" FontWeight="Bold" Foreground="#27ae60"/>
                        <TextBlock Text=" | Преподавателей:" FontWeight="Bold" Margin="20,0,10,0"/>
                        <TextBlock x:Name="TeachersCountText" FontWeight="Bold" Foreground="#e74c3c"/>
                    </StackPanel>
                </Border>

                <!-- Список пользователей -->
                <Border Background="White" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="Все пользователи:" FontWeight="Bold" Margin="0,0,0,10"/>

                        <ItemsControl x:Name="UsersItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f8f9fa" Margin="0,0,0,5" Padding="10" CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding FullName}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Login}" FontSize="12" Foreground="Gray"/>
                                                <TextBlock Text="{Binding Email}" FontSize="12" Foreground="Gray"/>
                                                <TextBlock Text="{Binding Role}" FontSize="12" 
                                                           FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Role}" Value="Student">
                                                                    <Setter Property="Foreground" Value="Green"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Role}" Value="Teacher">
                                                                    <Setter Property="Foreground" Value="Blue"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Role}" Value="Admin">
                                                                    <Setter Property="Foreground" Value="Red"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>

                                            <ComboBox Grid.Column="1" Width="120" Margin="10,0"
                                                      SelectedValue="{Binding Role}">
                                                <ComboBoxItem Content="Student"/>
                                                <ComboBoxItem Content="Teacher"/>
                                                <ComboBoxItem Content="Admin"/>
                                            </ComboBox>

                                            <Button Grid.Column="2" Content="Сохранить" 
                                                    Click="SaveUserRole_Click" Tag="{Binding UserId}"
                                                    Background="#27ae60" Foreground="White" 
                                                    Padding="10,5" Margin="5,0,0,0"
                                                    Cursor="Hand"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>