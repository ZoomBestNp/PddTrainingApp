<Page x:Class="PddTrainingApp.Views.TeacherStudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Мои студенты">
    <Grid Background="#f5f5f5">
        <ScrollViewer>
            <StackPanel Margin="20">
                <Button Content="← Назад" Click="BackButton_Click"
                        Background="Transparent" Foreground="#007ACC" 
                        Padding="10,5" FontSize="14" HorizontalAlignment="Left"
                        BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>

                <TextBlock Text="Мои студенты" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,20" Foreground="#333"/>

                <!-- Список студентов -->
                <Border Background="White" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="Привязанные студенты:" FontWeight="Bold" Margin="0,0,0,10"/>

                        <ItemsControl x:Name="StudentsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f8f9fa" Margin="0,0,0,10" Padding="15" CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding FullName}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Email}" FontSize="12" Foreground="Gray"/>
                                                <TextBlock Text="{Binding StudentCode}" FontSize="12" Foreground="Blue"/>
                                                <TextBlock Text="{Binding ActiveAssignments, StringFormat='Активных заданий: {0}'}" 
                                                           FontSize="11" Foreground="Green" Margin="0,5,0,0"/>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="Назначить задание" 
                                                    Click="AssignTask_Click" Tag="{Binding UserId}"
                                                    Background="#3498db" Foreground="White" 
                                                    Padding="10,5" Cursor="Hand"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoStudentsText" Text="У вас пока нет привязанных студентов" 
                                   HorizontalAlignment="Center" FontStyle="Italic" 
                                   Foreground="Gray" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>