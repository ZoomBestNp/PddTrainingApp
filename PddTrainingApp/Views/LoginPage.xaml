<Page x:Class="PddTrainingApp.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход в систему">
    <Grid Background="#f5f5f5">
        <Border Background="White" Padding="40" CornerRadius="15" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                BorderBrush="#ddd" BorderThickness="1">
            <StackPanel Width="300">
                <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="Логин:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="LoginTextBox" Padding="10" FontSize="14" 
                         Text="" Background="#f8f9fa"/>

                <TextBlock Text="Пароль:" FontWeight="Bold" Margin="0,15,0,5"/>
                <PasswordBox x:Name="PasswordBox" Padding="10" FontSize="14" 
                             Password="" Background="#f8f9fa"/>

                <Button Content="ВОЙТИ" Click="LoginButton_Click" 
                        Background="#007ACC" Foreground="White" 
                        Padding="20,12" FontSize="14" FontWeight="Bold"
                        Margin="0,30,0,0" BorderThickness="0" Cursor="Hand"/>

                <Button Content="📝 Регистрация" Click="RegisterButton_Click"
                        Background="Transparent" Foreground="#007ACC" 
                        Padding="10,5" FontSize="14" BorderThickness="0"
                        Cursor="Hand" HorizontalAlignment="Center" Margin="0,10,0,0"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>