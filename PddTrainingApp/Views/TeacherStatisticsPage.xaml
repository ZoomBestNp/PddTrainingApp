<Page x:Class="PddTrainingApp.Views.TeacherStatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Статистика студентов">
    <Grid Background="#f5f5f5">
        <ScrollViewer>
            <StackPanel Margin="20">
                <Button Content="← Назад" Click="BackButton_Click"
                        Background="Transparent" Foreground="#007ACC" 
                        Padding="10,5" FontSize="14" HorizontalAlignment="Left"
                        BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>

                <TextBlock Text="Статистика студентов" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,20" Foreground="#333"/>

                <!-- Фильтры -->
                <Border Background="White" Padding="15" CornerRadius="10" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Задание:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="AssignmentComboBox" Width="200" Padding="5"
                                  DisplayMemberPath="Name" Margin="0,0,20,0"/>
                        <Button Content="Показать" Click="ShowStatistics_Click"
                                Background="#3498db" Foreground="White" Padding="10,5"/>
                    </StackPanel>
                </Border>

                <!-- Статистика -->
                <ItemsControl x:Name="StatisticsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" Margin="0,0,0,10" Padding="15" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding StudentName}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding AssignmentName}" FontSize="12" Foreground="Gray"/>
                                        <TextBlock Text="{Binding DetailedStatus}" FontSize="11" Foreground="{Binding StatusColor}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0">
                                        <TextBlock Text="{Binding CorrectAnswers}" FontWeight="Bold"/>
                                        <TextBlock Text="/"/>
                                        <TextBlock Text="{Binding TotalQuestions}" FontWeight="Bold"/>
                                        <TextBlock Text="("/>
                                        <TextBlock Text="{Binding Percentage}" FontWeight="Bold"/>
                                        <TextBlock Text="%)" Margin="5,0,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="{Binding Score}" 
                               Foreground="{Binding StatusColor}"
                               FontWeight="Bold" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock x:Name="NoDataText" Text="Выберите задание для просмотра статистики" 
                           HorizontalAlignment="Center" FontStyle="Italic" 
                           Foreground="Gray" Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>