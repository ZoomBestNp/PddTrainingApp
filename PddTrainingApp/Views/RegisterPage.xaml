<Page x:Class="PddTrainingApp.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">
    <Grid Background="#f5f5f5">
        <Border Background="White" Padding="40" CornerRadius="15" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                BorderBrush="#ddd" BorderThickness="1">
            <StackPanel Width="350">
                <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="ФИО:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="FullNameTextBox" Padding="10" FontSize="14" 
                         Background="#f8f9fa" Margin="0,0,0,15"/>

                <TextBlock Text="Логин:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="LoginTextBox" Padding="10" FontSize="14" 
                         Background="#f8f9fa" Margin="0,0,0,15"/>

                <TextBlock Text="Email:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" Padding="10" FontSize="14" 
                         Background="#f8f9fa" Margin="0,0,0,15"/>

                <TextBlock Text="Пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Padding="10" FontSize="14" 
                             Background="#f8f9fa" Margin="0,0,0,15"/>

                <TextBlock Text="Код преподавателя (необязательно):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TeacherCodeTextBox" Padding="10" FontSize="14" 
                         Background="#f8f9fa" Margin="0,0,0,20"
                         ToolTip="Введите код преподавателя, если он у вас есть"/>

                <Button Content="ЗАРЕГИСТРИРОВАТЬСЯ" Click="RegisterButton_Click" 
                        Background="#27ae60" Foreground="White" 
                        Padding="20,12" FontSize="14" FontWeight="Bold"
                        Margin="0,0,0,10" BorderThickness="0" Cursor="Hand"/>

                <Button Content="← Назад к входу" Click="BackToLogin_Click"
                        Background="Transparent" Foreground="#007ACC" 
                        Padding="10,5" FontSize="14" BorderThickness="0"
                        Cursor="Hand" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>