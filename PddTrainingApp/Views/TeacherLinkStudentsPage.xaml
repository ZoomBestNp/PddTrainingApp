<Page x:Class="PddTrainingApp.Views.TeacherLinkStudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Привязка студентов">
    <Grid Background="#f5f5f5">
        <ScrollViewer>
            <StackPanel Margin="20">
                <Button Content="← Назад" Click="BackButton_Click"
                        Background="Transparent" Foreground="#007ACC" 
                        Padding="10,5" FontSize="14" HorizontalAlignment="Left"
                        BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>

                <TextBlock Text="Привязка студентов" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,20" Foreground="#333"/>



                <!-- Привязка студента по коду -->
                <Border Background="White" Padding="15" CornerRadius="10" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Привязать студента по коду:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="StudentCodeTextBox" Padding="10" FontSize="14" 
                                     Width="200" Background="#f8f9fa" Margin="0,0,10,0"
                                     ToolTip="Введите код студента"/>
                            <Button Content="Привязать" Click="LinkStudent_Click"
                                    Background="#3498db" Foreground="White" Padding="15,8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Мои привязанные студенты -->
                <TextBlock Text="Мои студенты:" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <Border Background="White" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <ItemsControl x:Name="StudentsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f8f9fa" Margin="0,0,0,5" Padding="10" CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Student.FullName}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Student.Email}" FontSize="12" Foreground="Gray"/>
                                                <TextBlock Text="{Binding Student.StudentCode}" FontSize="12" Foreground="Blue"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1" Text="{Binding LinkedDate, StringFormat='Привязан: {0:dd.MM.yyyy}'}" 
                                                       FontSize="11" Foreground="Gray" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoStudentsText" Text="У вас пока нет привязанных студентов" 
                                   HorizontalAlignment="Center" FontStyle="Italic" 
                                   Foreground="Gray" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>